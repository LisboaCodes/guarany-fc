// Guarany FC - SÃ³cio Torcedor Database Schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// UsuÃ¡rios do sistema (Admin/Operador)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String   // bcrypt hash
  role      UserRole @default(OPERATOR)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // RelaÃ§Ãµes
  membersCreated Member[]   @relation("MemberCreatedBy")
  paymentsRegistered Payment[] @relation("PaymentRegisteredBy")
  auditLogs      AuditLog[]

  @@index([email])
  @@index([active])
  @@map("users")
}

enum UserRole {
  ADMIN
  OPERATOR
}

// SÃ³cios torcedores
model Member {
  id        String   @id @default(cuid())
  name      String
  cpf       String   @unique
  birthDate DateTime
  phone     String   // WhatsApp
  email     String?
  address   String?
  active    Boolean  @default(true)
  joinDate  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign Keys
  createdById String
  createdBy   User   @relation("MemberCreatedBy", fields: [createdById], references: [id])

  // RelaÃ§Ãµes
  payments Payment[]
  notificationLogs NotificationLog[]

  @@index([cpf])
  @@index([active])
  @@index([birthDate])
  @@index([name])
  @@map("members")
}

// Pagamentos mensais
model Payment {
  id              String        @id @default(cuid())
  amount          Decimal       @db.Decimal(10, 2)
  method          PaymentMethod
  status          PaymentStatus @default(PENDING)
  referenceMonth  Int           // 1-12
  referenceYear   Int           // 2026
  dueDate         DateTime
  paidAt          DateTime?
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Foreign Keys
  memberId       String
  member         Member @relation(fields: [memberId], references: [id], onDelete: Cascade)
  registeredById String
  registeredBy   User   @relation("PaymentRegisteredBy", fields: [registeredById], references: [id])

  @@unique([memberId, referenceMonth, referenceYear])
  @@index([memberId])
  @@index([status])
  @@index([referenceMonth, referenceYear])
  @@index([dueDate])
  @@map("payments")
}

enum PaymentMethod {
  PIX
  CASH
  CARD
  BOLETO
}

enum PaymentStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}


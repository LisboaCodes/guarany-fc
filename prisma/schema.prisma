// Log de notificaÃ§Ãµes WhatsApp
model NotificationLog {
  id        String             @id @default(cuid())
  type      NotificationType
  status    NotificationStatus @default(PENDING)
  message   String
  phone     String
  sentAt    DateTime?
  errorMessage String?
  createdAt DateTime           @default(now())

  // Foreign Keys
  memberId  String?
  member    Member? @relation(fields: [memberId], references: [id], onDelete: SetNull)

  @@index([type])
  @@index([status])
  @@index([createdAt])
  @@map("notification_logs")
}

enum NotificationType {
  BIRTHDAY
  PAYMENT_REMINDER
  PAYMENT_OVERDUE
  WELCOME
}

enum NotificationStatus {
  PENDING
  SENT
  FAILED
}

// Log de auditoria
model AuditLog {
  id         String   @id @default(cuid())
  action     String
  entityType String
  entityId   String?
  changes    Json?    // JSON com before/after
  ipAddress  String?
  createdAt  DateTime @default(now())

  // Foreign Keys
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([entityType])
  @@index([createdAt])
  @@map("audit_logs")
}
